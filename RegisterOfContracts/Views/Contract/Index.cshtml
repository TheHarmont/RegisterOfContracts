    <!-- Таблица с данными контрактов -->
    <table id="contract-table" class="table display" width="100%" style="user-select:none">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.contracts.number)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.signDate)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.shortName)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.purchaseCode)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.contractSubject)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.contactEMail)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.INN)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.KPP)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.regNum)</th>
                <th>@Html.DisplayNameFor(model => model.contracts.address)</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <!-- Модальное окно настройки столбцов в таблице -->
    <div class="modal fade" id="settingsTable" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">Отображение столбцов</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 mb-3" id="tableCols">
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button id="colToDefault" type="button" class="btn btn-secondary justify-content-end">Вернуть по умолчанию</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Модальное окно отображения данных контракта -->
    <div class="modal fade" id="contractInfo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">№ </h5> <h5 class="modal-title ms-2" id="number"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="container">
                        <div class="row justify-content-around">
                            <div class="forms-inputs contract-area col-11 mt-1 mb-4">
                                <span class="fw-bold">Формирование договора</span>
                                <!--Поле id. Необходимо для формирования контрактов-->
                                <input type="hidden" style="display:none" id="id" name="contractId">
                                <div class="row justify-content-between  align-items-center">
                                    <div class="col-5">
                                        <div class="form-group">
                                            <select id="selectedPattern" class="form-select" aria-label="Default select example">
                                                @{
                                                    DirectoryInfo contractPotternsFolder = new DirectoryInfo((string)Model.pathPattern);
                                                    foreach (FileInfo files in contractPotternsFolder.GetFiles().OrderByDescending(x => x.Name))
                                                    {
                                                        <option>@files.Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-5 d-flex justify-content-center">
                                        <button id="generateButton" class="col-8 btn btn-success modal-title">
                                            Сформировать
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="forms-inputs col-5">
                                <!--Область с информацией о заказчике-->
                                <div class="forms-inputs contract-area">
                                    <span class="fw-bold">Информация о заказчике</span>
                                    <div class="d-grid gap-3">
                                        <div class="p-2">
                                            <div class="forms-inputs">
                                                <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.shortName):</span> <div id="shortName" class="dataInput d-flex align-items-center"></div>
                                            </div>
                                        </div>
                                        <div class="p-2">
                                            <div class="forms-inputs">
                                                <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.contactEMail):</span> <div id="contactEMail" class="dataInput d-flex align-items-center"></div>
                                            </div>
                                        </div>
                                        <div class="p-2">
                                            <div class="forms-inputs">
                                                <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.INN):</span> <div id="INN" class="dataInput d-flex align-items-center"></div>
                                            </div>
                                        </div>
                                        <div class="p-2">
                                            <div class="forms-inputs">
                                                <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.KPP):</span> <div id="KPP" class="dataInput d-flex align-items-center"></div>
                                            </div>
                                        </div>
                                        <div class="p-2">
                                            <div class="forms-inputs">
                                                <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.address):</span> <div id="address" class="dataInput d-flex align-items-center"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Область вложений-->
                                <div class="forms-inputs contract-area mt-4">
                                    <span class="fw-bold">Вложения</span>
                                    <div class="d-grid gap-3">
                                        <div id="attachArea">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Область с информацией о контракте-->
                            <div class="forms-inputs contract-area col-5">
                                <span class="fw-bold">Общие данные</span>
                                <div class="d-grid gap-3">
                                    <div class="p-2">
                                        <div class="forms-inputs">
                                            <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.signDate):</span> <div id="signDate" class="dataInput d-flex align-items-center"></div>
                                        </div>
                                    </div>
                                    <div class="p-2">
                                        <div class="forms-inputs">
                                            <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.purchaseCode):</span> <div id="purchaseCode" class="dataInput d-flex align-items-center"></div>
                                        </div>
                                    </div>
                                    <div class="p-2">
                                        <div class="forms-inputs">
                                            <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.regNum):</span> <div id="regNum" class="dataInput d-flex align-items-center"></div>
                                        </div>
                                    </div>
                                    <div class="p-2">
                                        <div class="forms-inputs">
                                            <span class="fs-6 fst-normal">@Html.DisplayNameFor(model => model.contracts.contractSubject):</span> <div id="contractSubject" class="dataInput d-flex align-items-center"></div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-around p-2">
                                        <div class="col-6 mx-auto">
                                            <a class="btn btn-primary d-flex justify-content-center" id="href" target="_blank" role="button">Карточка контракта</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Модальное окно демонстрация содержимого договора -->

    <div class="modal fade" id="documentView" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title w-100" id="exampleModalLabel">Modal title</h5>
                    <div class="d-flex justify-content-end w-100">
                        <a id="downloadFileBut" class="btn btn-success mx-4" aria-label="Close">Скачать файл</a>
                    </div>
                    <button type="button" class="btn-close mx-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body bg-color-gray">
                    <div class="d-flex justify-content-center">
                        <div id="fileContentArea" class="sheet py-3 px-5 "> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="warning-label border border-danger">
                <p class="p-4">
                    <b>Данное визуальное представление может отличаться от реального файла.</b>
                    <b>Используйте его только для сверки подставляемых данных!</b>
                </p>
            </div>
        </div>
    </div>

</div>

<script src="~/js/contract-table.js" asp-append-version="true"></script>
<script src="~/js/contract-file-create.js" asp-append-version="true"></script>
